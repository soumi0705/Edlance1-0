<script>
    var questions = <%-JSON.stringify(Questions)%>;
    var answers = <%-JSON.stringify(Answers)%>;
    
    const answerSet =  (id,quillcontent)=>{
        var quill = new Quill(`#quillA${id}`,{
                    theme: 'snow',
                            readOnly: true,
                            modules: {
                                toolbar: false
                            }
                })
                return quill.setContents(JSON.parse(quillcontent))
    }

    document.onreadystatechange = ()=>{
		
		
        if(document.readyState =="complete"){
			// var acc = account[0];
			// console.log(acc);
			alert('Metamask account will be checked! and Any Unauthhorised entry will be redirected to Login Page!');
			// if(acc!='0x58bf784011d10d6cB1D661F19d71d0E3803E1640' || account==null){
			// 	window.location.href='/';
			// }

            questions.forEach(Element =>{
                var quill = new Quill(`#quillQ${Element._id}`,{
                    theme: 'snow',
                            readOnly: true,
                            modules: {
                                toolbar: false
                            }
                })
                quill.setContents(JSON.parse(Element.question))
                answers.filter(ElementA => Element._id == ElementA._id && answerSet(ElementA._id,ElementA.answer))
            })

        }
    }

</script>
